<?xml version="1.0" encoding="utf-8"?>
<app.config xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://bindopen.org/xsd">
  
  <scalar name="applicationInstanceName" value="test.console" />
  <scalar name="cookieDomain" value=".meltingsoft.com" />
  <scalar name="defaultTheme" value="default" />
  <scalar name="defaultUICultureName" value="fr-FR" />
  
  <scalar name="applicationInstanceKind" value="Autonomous" />
  <scalar name="currentRuntimeMode" value="Debug" />
  <scalar name="executionLevel" value="Development" />
  
  <scalar name="isUserTrackingEnabled" value="true" valueType="Boolean" />

  <!--<scalar name="extensions.folderPath" script="$(application.folderPath)app_data\extensions" />-->
  <!--<scalar name="log.folderPath" script="$(application.folderPath)app_data\log" />-->
  <!--<scalar name="runtime.folderPath" script="$(application.folderPath)app_data\log" />-->
  <!--<scalar name="settings.filePath" script="$(application.folderPath)app_data\log" />-->
  
  <scalar name="test.folderPath" script="$(application.folderPath) ..\app_data\test" />

  <collection name="test.uris">
    <scalar name="key1" script="url1" />
    <scalar name="key2" script="url2" />
  </collection>
  
  <credentials>
    <credential name="crendential1">
      <domainId>bindopen.com</domainId>
      <login>userA@meltingsoft.com</login>
      <password>passwordC</password>
    </credential>
    <credential name="crendential2">
      <login>userB@meltingsoft.com</login>
      <password>passwordB</password>
    </credential>
  </credentials>
  
  <dataSources>
    <add name="smtp_default" kind="EmailServer">
      <configuration definition="messages$smtp">
        <scalar name="host" value="smtp.googlemail.com" />
        <scalar name="port" value="587" valueType="Integer" />
        <scalar name="isDefaultCredentialsUsed" value="true" valueType="Boolean" />
        <scalar name="isSslEnabled" value="true" valueType="Boolean" />
        <scalar name="timeout" value="60000" valueType="Integer" />
        <scalar name="login" value="login@test.com" />
        <scalar name="password" value="passwordA" />
      </configuration>
    </add>
    <add name="sphere.identity" kind="Database">
      <configuration definition="database.mssqlserver$client">
        <scalar name="databaseKind" value="MSSqlServer" />
        <connectionString>
          <![CDATA[Data Source=datasource;Initial Catalog=catalog_db;User Id=adminapp;Password=password;]]>
        </connectionString>
      </configuration>
    </add>    
    
  </dataSources>
  
</app.config>
