<?xml version="1.0" encoding="utf-8"?>
<bdo.config xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://bindopen.org/xsd">
    
  <scalar name="test.folderPath" script="$(application.folderPath) ..\app_data\test" />

  <collection name="test.uris">
    <scalar name="key1" script="url1" />
    <scalar name="key2" script="url2" />
  </collection>

  <credentials>
    <credential name="crendential1">
      <domainId>test.com</domainId>
      <login>userA@test.com</login>
      <password>passwordC</password>
    </credential>
    <credential name="crendential2">
      <login>userB@test.com</login>
      <password>passwordB</password>
    </credential>
  </credentials>

  <dataSources>
    <add name="smtp_default" kind="EmailServer">
      <configuration definition="messages$smtp">
        <scalar name="host" value="smtp.googlemail.com" />
        <scalar name="port" valueType="Integer" value="587" />
        <scalar name="isDefaultCredentialsUsed" valueType="Boolean" value="true" />
        <scalar name="isSslEnabled" valueType="Boolean" value="true" />
        <scalar name="timeout" valueType="Integer" value="60000" />
        <scalar name="login" value="login@test.com" />
        <scalar name="password" value="passwordA" />
      </configuration>
    </add>
    <add name="test.db" kind="Database">
      <configuration definition="database.postgresql$client">
        <scalar name="databaseKind" value="PostgreSql" />
        <scalar name="connectionString" value="Data Source=datasource;Initial Catalog=catalog_db;User Id=adminapp;Password=password;" />
      </configuration>
    </add>    
    
  </dataSources>
  
</bdo.config>
