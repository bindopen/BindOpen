      <xs:extension base="bdo:DataItem">
        <xs:sequence>
          <xs:element minOccurs="0" maxOccurs="1" name="dataHandlerUniqueName" type="xs:string" />
          <xs:element minOccurs="0" maxOccurs="1" name="sourceElement" type="bdo:DataElement" />
          <xs:element minOccurs="0" maxOccurs="1" name="pathDetail" type="bdo:DataElementSet" />
