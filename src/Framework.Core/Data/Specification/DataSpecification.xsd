<?xml version="1.0" encoding="utf-8"?>
<xs:schema
  xmlns:bdo="https://bindopen.org/xsd"
  elementFormDefault="qualified" targetNamespace="https://bindopen.org/xsd" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:include schemaLocation="../../data/items/IndexedDataItem.xsd" />
  <xs:include schemaLocation="../../data/common/RequirementLevel.xsd" />
  <xs:include schemaLocation="../../data/common/InheritanceLevel.xsd" />
  <xs:include schemaLocation="../../data/common/Arrays.xsd" />
  <xs:include schemaLocation="../../data/common/AccessibilityLevel.xsd" />

  <xs:complexType name="DataSpecification" abstract="true">
    <xs:complexContent mixed="false">
      <xs:extension base="bdo:IndexedDataItem">
        <xs:sequence>
          <xs:element minOccurs="0" maxOccurs="1" name="requirementLevel" type="bdo:RequirementLevel" />
          <xs:element minOccurs="0" maxOccurs="1" name="inheritanceLevel" type="bdo:InheritanceLevel" />
          <xs:element minOccurs="0" maxOccurs="1" name="specificationLevels" type="bdo:ArrayOfSpecificationLevel" />
          <xs:element minOccurs="0" maxOccurs="1" name="accessibilityLevel" type="bdo:AccessibilityLevel" />
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
</xs:schema>